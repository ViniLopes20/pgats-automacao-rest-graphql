{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Alunos e Notas",
        "version": "1.0.0"
    },
    "paths": {
        "/login": {
            "post": {
                "summary": "Login de usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "login": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "login",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token JWT gerado"
                    },
                    "401": {
                        "description": "Credenciais inválidas"
                    }
                }
            }
        },
        "/usuarios": {
            "post": {
                "summary": "Cadastro de usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "login": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "login",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário cadastrado"
                    },
                    "409": {
                        "description": "Login já existe"
                    }
                }
            },
            "get": {
                "summary": "Listar usuários cadastrados",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de usuários",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "login": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token não fornecido ou inválido"
                    }
                }
            }
        },
        "/alunos": {
            "post": {
                "summary": "Cadastro de aluno",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "nome"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Aluno cadastrado (matrícula gerada automaticamente)"
                    },
                    "401": {
                        "description": "Token não fornecido ou inválido"
                    }
                }
            },
            "get": {
                "summary": "Listar alunos cadastrados com notas",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de alunos com notas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "matricula": {
                                                "type": "string"
                                            },
                                            "nome": {
                                                "type": "string"
                                            },
                                            "notas": {
                                                "type": "array",
                                                "items": {
                                                    "type": "number"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token não fornecido ou inválido"
                    }
                }
            }
        },
        "/notas": {
            "post": {
                "summary": "Cadastro de nota",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "matricula": {
                                        "type": "string"
                                    },
                                    "nota": {
                                        "type": "number"
                                    }
                                },
                                "required": [
                                    "matricula",
                                    "nota"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Nota cadastrada"
                    },
                    "400": {
                        "description": "Nota inválida"
                    },
                    "404": {
                        "description": "Aluno não encontrado"
                    },
                    "401": {
                        "description": "Token não fornecido ou inválido"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}